<Window x:Class="EncryptionSteganography.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="About This App" FontWeight="Bold" FontSize="16"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Steganography Encryption" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                <TextBlock Text="Version 1.0" Margin="0,5,0,0"/>
                <TextBlock Text="Project on Cryptographic Methods for Information Protection. Project topic software implementation of Steganography" TextWrapping="Wrap" Margin="0,10,0,0"/>
                <TextBlock Text="© 2024 Krum Topuzov, student at Sofia Technical University, 3rd year software engineering" TextWrapping="Wrap" Margin="0,15,0,0" Height="38" Width="376"/>
            </StackPanel>
        </ScrollViewer>
        <Button Content="OK" Grid.Row="1" Width="75" Height="23" HorizontalAlignment="Left" Click="OkButton_Click" Margin="280,190,0,0" Grid.RowSpan="2" VerticalAlignment="Top"/>
    </Grid>
</Window>

